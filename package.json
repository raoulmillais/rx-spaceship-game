{
  "name": "rx-space-invaders",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm build/* dist/*",
    "start": "node dist/server.js",
    "build:client": "tsc --allowJs --sourceMap --outDir dist lib/client.ts && browserify dist/client.js -o build/bundle.js",
    "build:server": "mkdir -p dist && tsc --allowJs --sourceMap --outDir dist lib/server.js",
    "build": "npm-run-all build:*",
    "watch:test": "nodemon -e js -x 'npm-run-all -s build:server test:unit'",
    "watch:client": "nodemon -e js -w lib -x 'npm run build:client'",
    "watch:server": "nodemon -e js -w lib -x 'npm-run-all build:server && node dist/server.js'",
    "watch": "npm-run-all -p watch:client watch:server",
    "pretest": "npm run build",
    "postinstall": "typings install",
    "test": "mocha --compilers js:babel-register test/unit --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raoulmillais/rx-spaceship-game.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/raoulmillais/rx-spaceship-game/issues"
  },
  "homepage": "https://github.com/raoulmillais/rx-spaceship-game#readme",
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "babelify": "^7.3.0",
    "browserify": "^13.0.0",
    "eslint": "^2.9.0",
    "npm-run-all": "^1.8.0",
    "tsify": "^0.15.3",
    "typescript": "^1.8.10",
    "typings": "^0.8.1"
  },
  "dependencies": {
    "express": "^4.13.4",
    "nodemon": "^1.9.2",
    "ramda": "^0.21.0",
    "rx": "^4.1.0"
  }
}
