{
  "name": "rx-space-invaders",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:client": "browserify -d lib/client.js -o build/bundle.js",
    "build:server": "mkdir -p dist && babel -s inline lib -d dist",
    "build": "npm-run-all build:*",
    "watch:test": "nodemon -e js -x 'npm-run-all -s build:server test:unit'",
    "watch:client": "nodemon -e js -w lib -x 'npm run build:client",
    "watch:server": "NODE_PATH=./dist/ nodemon -e js -x 'npm run build:server && node dist/index.js' | bunyan",
    "watch": "npm-run-all -p watch:client watch:server",
    "pretest": "npm-run-all -s build:client build:server",
    "test": "mocha --compilers js:babel-register test/unit --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raoulmillais/rx-spaceship-game.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/raoulmillais/rx-spaceship-game/issues"
  },
  "homepage": "https://github.com/raoulmillais/rx-spaceship-game#readme",
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "babelify": "^7.3.0",
    "browserify": "^13.0.0",
    "eslint": "^2.9.0",
    "npm-run-all": "^1.8.0"
  },
  "dependencies": {
    "express": "^4.13.4",
    "nodemon": "^1.9.2",
    "ramda": "^0.21.0",
    "rx": "^4.1.0"
  }
}
